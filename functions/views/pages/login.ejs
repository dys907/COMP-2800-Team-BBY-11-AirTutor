<body>
  <div>
    <h3> Log in</h3>
    <div class="form-group">
      <label for=""></label>
      <input type="email" name="emailLoginField" id="emailLoginField" class="form-control" placeholder=""
        aria-describedby="helpId">
      <small id="helpId" class="text-muted">Email</small>
    </div>
    <div class="form-group">
      <label for=""></label>
      <input type="password" class="form-control" name="passwordLoginField" id="passwordLoginField"
        aria-describedby="emailHelpId" placeholder="">
      <small id="emailHelpId" class="form-text text-muted">Password</small>
    </div>
    <button type="submit" onclick="login()">Login</button>
  </div>

  <!-- The surrounding HTML is left untouched by FirebaseUI.
     Your app may use that space for branding, controls and other customizations.-->
  <h1>Welcome to Air Tutor</h1>
  <div id="firebaseui-auth-container"></div>
  <div id="loader">Loading...</div>

  <!-- Firebase javascripts -->
  <script src="https://www.gstatic.com/firebasejs/7.14.2/firebase-app.js"></script>
